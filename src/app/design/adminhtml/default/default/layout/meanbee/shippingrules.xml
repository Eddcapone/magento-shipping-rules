<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<adminhtml_shippingrules_index>
		<update handle="meanbee_shippingrules" />
		<reference name="content">
			<block type="meanbee_shippingrules/adminhtml_rules" name="rules">
				<block type="meanbee_shippingrules/adminhtml_rules_grid" name="grid" />
			</block>
		</reference>
	</adminhtml_shippingrules_index>

	<adminhtml_shippingrules_edit>
		<update handle="meanbee_shippingrules" />
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<stylesheet>css/meanbee/shippingrules/application.css</stylesheet>
			</action>
		</reference>
		<reference name="content">
			<block type="core/text" name="shippingrules_script">
				<action method="setText">
					<text><![CDATA[<script src="/js/lib/meanbee/shippingrules/script.js" defer></script>]]></text>
				</action>
			</block>
			<block type="meanbee_shippingrules/adminhtml_rules_edit" name="rules_edit" />
		</reference>
	</adminhtml_shippingrules_edit>

	<meanbee_shippingrules>
		<reference name="head">
			<action method="addItem">
				<type>skin_js</type>
				<script>js/meanbee/shippingrules.js</script>
			</action>
		</reference>
		<reference name="content">
			<block type="core/template" template="meanbee/shippingrules/jsglobals.phtml" name="globals" />
		</reference>
	</meanbee_shippingrules>

	<meanbee_shippingrules_MIGRATION_QUEUED>
		<reference name="content">
			<block type="core/template" before="*" template="meanbee/shippingrules/migration/queued.phtml" />
		</reference>
	</meanbee_shippingrules_MIGRATION_QUEUED>

	<meanbee_shippingrules_MIGRATION_MALFORMED>
		<reference name="content">
			<block type="core/template" before="*" template="meanbee/shippingrules/migration/malformed.phtml" />
		</reference>
	</meanbee_shippingrules_MIGRATION_MALFORMED>

	<meanbee_shippingrules_MIGRATION_MIXED>
		<reference name="content">
			<block type="core/template" before="*" template="meanbee/shippingrules/migration/mixed.phtml" />
		</reference>
	</meanbee_shippingrules_MIGRATION_MIXED>
</layout>
