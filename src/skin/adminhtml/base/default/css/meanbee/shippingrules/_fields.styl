ul.calculator-tree {
    input, select[id] {
        background: linear-gradient(to top, currentColor 0, currentColor 1px, transparent 1px);
        border: none;
        border-radius: 0;
        padding: 0 .5em .2em .5em;
        vertical-align: bottom;
        width: auto;
    }
    select[id] {
        font-size: .9em;
        font-weight: bold;
        padding: 0;
    }

    input[type="time"]::-webkit-clear-button {
        display: none;
    }

    input[type="checkbox"] {
        margin: 0 .2em .2em .5em;
    }
}
